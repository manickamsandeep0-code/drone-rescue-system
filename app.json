{
  "expo": {
    "name": "Drone Rescue System",
    "slug": "drone-rescue-system",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "plugins": [
      "./plugins/withVolumeButton"
    ],
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0A0E27"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs access to your location to send emergency coordinates to the drone rescue system."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0A0E27"
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "VIBRATE",
        "FOREGROUND_SERVICE",
        "POST_NOTIFICATIONS",
        "WAKE_LOCK",
        "MODIFY_AUDIO_SETTINGS",
        "BROADCAST_STICKY",
        "RECORD_AUDIO"
      ],
      "package": "com.sandeep1235897.dronerescuesystem"
    },
    "extra": {
      "eas": {
        "projectId": "ff8a0906-cff1-43c6-b9b3-dfd5fb729813"
      }
    }
  }
}
